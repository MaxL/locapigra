%tr
  %td= payment.name
  %td= payment.price
  %td= payment.fee_type
  %td= payment.active
  %td.text-right
    = link_to edit_payment_path(payment.id), class: "btn btn-default btn-xs" do
      %i.icon-edit
    = link_to payment, method: :delete, class: "btn btn-default btn-xs", data: { confirm: "Really delete #{payment.name}" } do
      %i.icon-block
