.container
  .row
    .col-xs-12.col-sm-6
      %h4
        Orders pending [#{@orders_pending.count}]
      - if @orders_pending.any?
        %table.table.table-condensend
          %thead
            %tr
              %td
                Order ID - Ref
              %td
                Customer
              %td.text-right
                $$$
              %td
          %tbody
            = render partial: "order", collection: @orders_pending
    .col-xs-12.col-sm-6
      %h4
        Orders placed (waiting for payment) [#{@orders_placed.count}]
