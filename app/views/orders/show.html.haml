%div.container
  %h1 Order # #{@order.id}
  %p= @order.address.recipient
  %p= @order.address.email
  %p
    Status:
    %strong= @status.name
  .row
    .col-xs-12.col-sm-10.col-md-6
      %table.table.table-condensed
        %tr
          %td
            Products:
          %td.text-right= number_to_currency @order.subtotal, locale: :de
        %tr
          %td
            Shipping:
          %td.text-right= number_to_currency @order.shipping, locale: :de
        %tr
          %td
            Tax:
          %td.text-right= number_to_currency @order.tax, locale: :de
        %tr
          %td
            %strong
              TOTAL
          %td.text-right.strong.blood= number_to_currency @order.subtotal, locale: :de
