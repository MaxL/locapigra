- provide(:title, @comic.name)
.container
  %h1.page-heading= @comic.name.upcase
  .row
    .col-xs-12.col-sm-12.col-md-4
      = image_tag @comic.cover_image, alt: @comic.name, class: "img-responsive magnific-image", data: { "mfp-src" => "#{@comic.cover_image}" }
    .col-xs-12.col-sm-12.col-md-8
      %p
        = @comic.description.html_safe
      %ul.list-unstyled
        %li
          %small
            Pages: #{@comic.pages}
        %li
          %small
            Cover: #{@comic.cover}
        %li
          %small
            Color: #{@comic.color}
        %li
          %small
            Size: #{@comic.dimensions}
      .thumbnails.row
        - @comic.images.each do |image|
          .col-xs-6.col-sm-4.comic-thumb-box
            %img.comic-thumb.magnific-image{"data-mfp-src" => "#{image.path}", :src => "#{image.path}"}/
