<%= form_tag password_resets_path , method: :post, class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag(
        :email,
        placeholder: "email address",
        class: "form-control"
    ) %>
  </div>
  <div class="form-group">
    <%= submit_tag "Reset my password" %>
  </div>

<% end %>
