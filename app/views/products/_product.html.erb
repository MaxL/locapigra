<div class="col-xs-12 col-sm-6 col-md-4">
  <div class="card">
    <div class="card-image">
      <%= link_to image_tag( product.cover_image, alt: product.name, class: 'img-responsive'), product %>
    </div>
    <div class="card-body text-center">
      <h3 class="card-title"><%= product.name %></h3>
      <p>
        <%= product.description.html_safe %>
      </p>
      <span class="price"><%= number_to_currency product.price, locale: :de %></span>
    </div>
    <div class="card-interaction">
      <%= form_for order_item, remote: true do |f| %>
        <% if user_signed_in? %>
          <% if current_user.admin? || current_user.beta? %>
            <div class="input-group">
              <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
              <div class="input-group-btn">
                <%= f.hidden_field :product_id, value: product.id %>
                <%= f.submit "Add to Cart", class: "btn btn-danger" %>
              </div>
            </div>
          <% else %>
            <p>
              Ordering products will be available soon, just waiting on some legal stuff. In the meantime, if you are a friend of l'oca pigra, let us know and we will provide you with more information.
            </p>
          <% end %>
        <% else %>
          <p>
            Ordering products will be available soon, just waiting on some legal stuff. In the meantime, if you are a friend of l'oca pigra, let us know and we will provide you with more information.
          </p>
        <% end %>
      <% end %>
      <% if current_user %>
        <ul class="list-inline">
          <li><%= link_to "edit", edit_product_path(product) %></li>
          <li><%= link_to "delete", product, method: :delete, data: {confirm: "Really delete product #{product.name}"} %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
