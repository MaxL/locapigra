%tr
  %td
    %h4= product.name
  %td
    %span.text-success= number_to_currency order_item.unit_price, locale: :de
  %td.text-center
    = form_for order_item, remote: true do |f|
      = f.hidden_field :product_id, value: product.id
      .input-group.input-group-sm{:role => "group"}
        = f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1
        %span.input-group-btn
          = f.button(type: "submit", class: "btn btn-primary") do
            %i.fa.fa-refresh
  %td.text-right
    %strong
      %span.text-success= number_to_currency order_item.total_price, locale: :de
  %td.text-right
    = link_to order_item, { data: { confirm: "Really delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger btn-xs" } do
      %i.fa.fa-close
